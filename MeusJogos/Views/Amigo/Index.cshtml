@model IEnumerable<MeusJogos.Models.Amigo>

@{
    ViewBag.Title = "Gerenciar Amigos";
}

<center><h2>Gerenciar Amigos</h2></center>

<p>
    @Html.ActionLink("Cadastrar", "Create", new { area = "" }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AmigoID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Exibir", "Details", new { id=item.AmigoID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Excluir", "Delete", new { id=item.AmigoID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
