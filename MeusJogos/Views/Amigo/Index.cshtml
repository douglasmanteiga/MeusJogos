@model IEnumerable<MeusJogos.Models.AmigoViewModel>

@{
    ViewBag.Title = "Gerenciar Amigos";
}

<center><h2>Gerenciar Amigos</h2></center>

<p>
    @Html.ActionLink("Cadastrar", "Create", new { area = "" }, new { @class = "btn btn-success", @id = "btnCadastrar" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AmigoID }, new { @class = "btn btn-primary", @id = "btnEditar" })
            @Html.ActionLink("Exibir", "Details", new { id=item.AmigoID }, new { @class = "btn btn-warning", @id = "btnExibir" })
            @Html.ActionLink("Excluir", "Delete", new { id=item.AmigoID }, new { @class = "btn btn-danger", @id = "btnExcluir" })
        </td>
    </tr>
}

</table>
